{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "eqeqeq": ["off", "smart"],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "space-before-function-paren": ["error", "always"]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "mongo": true
  },
  "plugins": [
    "promise"
  ]
}